@model IEnumerable<GummiBearKingdom.Models.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gummi Bear Kingdom Products</h2>
<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
       
        <th></th>
    </tr>

    @foreach (var listProduct in Model)
    {
        <tr>
            <td>
                <img src="@Url.Content(Model.Image)" alt="Image" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => listProduct.Name)
            </td>
            
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = listProduct.ProductId }) |
                @Html.ActionLink("Details", "Details", new { id = listProduct.ProductId }) |
                @Html.ActionLink("Delete", "Delete", new { id = listProduct.ProductId })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Create New", "Create")
</p>